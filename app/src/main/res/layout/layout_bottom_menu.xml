<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bot_nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_bottom_menu">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home_click"
            android:padding="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_event"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginLeft="8dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_home_gray"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_home"
            app:layout_constraintRight_toRightOf="@+id/iv_home"
            app:layout_constraintBottom_toBottomOf="@+id/iv_home"
            app:layout_constraintLeft_toLeftOf="@+id/iv_home"
            android:onClick="homeClick"/>

        <ImageView
            android:id="@+id/iv_event"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_event_click"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_home"
            app:layout_constraintRight_toLeftOf="@+id/iv_messager"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_event_gray"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_event"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_event"
            app:layout_constraintRight_toRightOf="@+id/iv_event"
            app:layout_constraintBottom_toBottomOf="@+id/iv_event"
            app:layout_constraintLeft_toLeftOf="@+id/iv_event"
            android:onClick="eventClick"/>

        <ImageView
            android:id="@+id/iv_messager"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_messenger_click"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_event"
            app:layout_constraintRight_toLeftOf="@+id/iv_notification"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_messager_gray"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_messenger"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_messager"
            app:layout_constraintRight_toRightOf="@+id/iv_messager"
            app:layout_constraintBottom_toBottomOf="@+id/iv_messager"
            app:layout_constraintLeft_toLeftOf="@+id/iv_messager"
            android:onClick="messagerClick"/>

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_notification_click"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_messager"
            app:layout_constraintRight_toLeftOf="@+id/iv_solution"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_notification_gray"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_notification"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_notification"
            app:layout_constraintRight_toRightOf="@+id/iv_notification"
            app:layout_constraintBottom_toBottomOf="@+id/iv_notification"
            app:layout_constraintLeft_toLeftOf="@+id/iv_notification"
            android:onClick="notificationClick"/>

        <ImageView
            android:id="@+id/iv_solution"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_solution_click"
            android:padding="8dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_notification"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_solution_gray"
            android:layout_width="@dimen/height_bottom_menu"
            android:layout_height="match_parent"
            android:src="@drawable/ic_solution"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_solution"
            app:layout_constraintRight_toRightOf="@+id/iv_solution"
            app:layout_constraintBottom_toBottomOf="@+id/iv_solution"
            app:layout_constraintLeft_toLeftOf="@+id/iv_solution"
            android:onClick="solutionClick"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>